<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal"
	android:baselineAligned="false"
    android:visibility="visible">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1">

		<ListView
			android:id="@+id/API_list_view"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:visibility="visible"/>

	</LinearLayout>

	<TextView
		android:layout_width="1dp"
		android:layout_height="match_parent"
		android:background="#008383"/>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="@string/users"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:id="@+id/API_item_methord"
			android:textSize="10sp"
			android:layout_weight="1"
            />

		<TextView
			android:layout_height="wrap_content"
			android:text="@string/translated"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="match_parent"/>

  <include layout="@layout/html_readload_ui"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           />
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="@string/ex_user"
			android:id="@+id/textView3"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:id="@+id/API_item_example"
			android:textSize="10sp"
			android:layout_weight="1"/>

	</LinearLayout>

</LinearLayout>

